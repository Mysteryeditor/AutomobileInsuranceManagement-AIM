
@{
    ViewBag.Title = "Index";
}
<style>
    #layer1Index {
        background-image: url('https://wallpaperaccess.com/full/4952646.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        padding-bottom: 50px;
    }
</style>
<div id="layer1Index">
    <div class="row d-flex p-5">
        <div class="col-lg-6 p-2">
            <h1 class="my-5 col-lg-7 text-white">
                Protect Your Vehicle<br /> with <br />AutoGrand
            </h1>
            <p class="col-lg-5 text-white">AutoGrand is a crucial investment for every vehicle owner. Whether you drive a car or motorcycle, having the right insurance coverage can provide peace of mind and financial protection in case of accidents, theft, or unforeseen events.</p>
        </div>

    </div>
</div>
<div class="container-fluid p-0">
    <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active my-5 ">
                <h4 class="ml-5">
                    Types Of Automobile Insurance
                </h4>
                <div class="row d-flex justify-content-center my-5 ">


                    <div class="card col-lg-3 my-5 ">
                        <div class="card-title text-center bg-white">
                            Liability Insurance
                        </div>
                        <div class="card-body text-decoration-capitalize">
                            Covers injuries and property damage
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="img-fluid" src="https://images.unsplash.com/photo-1558898268-92ae44e7670e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80" alt="...">
            </div>
            <div class="carousel-item">
                <img class="img-fluid" src="https://images.unsplash.com/photo-1558898268-92ae44e7670e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


</div>




<!-- Button trigger modal -->
<button type="button" class="btn btn-primary">
    Launch demo modal
</button>

