

@foreach (AutomobileInsuranceManagement_AIM.Models.Automobile obj in ViewBag.activeUserVehicles)
{
    <div class="card col-3 mx-3 my-2">
        <div class="d-flex my-2">
            <h6>Model:</h6>
            <label>@obj.carmodel.modelName</label>
        </div>

        <div class="d-flex my-2">
            <h6>Brand:</h6>
            <label>@obj.company.companyName</label>
        </div>

        <div class="d-flex my-2">
            <button class="btn btn-danger col-4 mx-auto my-2">@Html.ActionLink("Details", "AutomobileDetails", "Vehicle", new { automobileId = obj.automobileId }, new { @class = "button-link" })</button>
            @if (obj.isInsured == true)
            {
                <button class="btn btn-info col-4 mx-auto my-2">@Html.ActionLink("Policy", "ExpandAutoPolicy", "Policy", new { automobileId = obj.automobileId }, new { @class = "button-link" })</button>
            }
            else
            {
                <button class="btn btn-primary col-4 mx-auto my-2">

                    @Html.ActionLink("Policy+", "AddPolicyUser", "Policy", new { @autoId = obj.automobileId }, new { @class = "nav-link" })
                </button>
            }
        </div>
    </div>
}

<div class="card col-3 mx-3 my-2 d-flex justify-content-center align-items-center">
    <a href="@Url.Action("AddVehicle", "Vehicle")" class="navbar-brand">
        <i class="fa-solid fa-plus"></i>
    </a>
</div>


