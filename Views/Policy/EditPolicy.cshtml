                @Html.DropDownList("automobileTypeId", ViewBag.automobileTypeId as SelectList, null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.automobileTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

